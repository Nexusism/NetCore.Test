@model LoginInfo
@{
    ViewData["Title"] = "멤버십 로그인";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@*<h2>@ViewData["Title"]</h2>*@

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    @*<span class="h1 fw-bold mb-0">Logo</span>*@
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="EUser" asp-action="Login" onsubmit="btnLogin.disabled = true; return true;" style="width: 23rem;">
                        <div class="text-info">@Html.Raw(TempData["Message"])</div>
                        <div class="text-danger">@Html.Raw(ViewData["Message"])</div>
                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Exsis Project</h2>
                        <div class="text-danger" asp-validation-summary="All"></div>

                        <div class="form-outline mb-4">
                            @*@Html.DisplayNameFor(m => m.UserId)*@
                            <input type="text" id="form2Example18" class="form-control form-control-lg" asp-for="UserId" placeholder="아이디" />
                            <span class="text-danger" asp-validation-for="UserId"></span>
                            @*<label class="form-label" for="form2Example18">Email address</label>*@
                        </div>

                        <div class="form-outline mb-4">
                            @*@Html.DisplayNameFor(m => m.Password)*@
                            <input type="password" id="form2Example28" class="form-control form-control-lg" asp-for="Password" placeholder="비밀번호" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                            @*<label class="form-label" for="form2Example28">Password</label>*@
                        </div>
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input type="checkbox" asp-for="RememberMe" placeholder="아이디 저장"/>
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                            <span class="text-danger" asp-validation-for="RememberMe"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">로그인</button>
                        </div>
                        <p class="small mb-5 pb-lg-2">
                            <a class="text-muted" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Register">사용자 등록</a>
                            <a class="text-muted" href="#!">비밀번호 찾기</a>
                            </p>
                        @*<p>Don't have an account? <a href="#!" class="link-info">Register here</a></p>*@

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://cdn.pixabay.com/photo/2015/01/08/18/27/startup-593341_960_720.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>