@model UserInfo
@{
    ViewData["Title"] = "사용자 정보 수정";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="text-info">@Html.Raw(TempData["Message"])</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller ="EUser" asp-action="UpdateInfo" onsubmit="btnUpdateInfo.disabled = true; return true;">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserName)
                <input type="text" class="form-control" asp-for ="UserName" placeholder="사용자 이름" autofocus/>
                <input type="hidden" asp-for = "@Model.ChangeInfo.UserName"/>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserEmail)
                <input type="text" class="form-control" asp-for="UserEmail" placeholder="이메일" />
                <input type="hidden" asp-for="@Model.ChangeInfo.UserEmail" />
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>
            <hr />
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserId)
                <input type="text" class="form-control" asp-for="UserId" placeholder="사용자 ID" disabled/>
                <input type="hidden" asp-for="@Model.UserId" />
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Password)
                <input type="password" class="form-control" asp-for="Password" placeholder="비밀번호" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" name="btnUpdateInfo" class="btn btn-lg btn-success btn-block">수정</button>
        </form>
    </div>
</div>
