@model RegisterInfo
@{
    ViewData["Title"] = "사용자 등록";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller ="EUser" asp-action="Register" onsubmit="btnRegister.disabled = true; return true;">
            <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            @Html.DisplayNameFor(m => m.UserId)
            <input type="text" class="form-control" asp-for="UserId" placeholder="사용자ID" autofocus />
            <span class="text-danger" asp-validation-for="UserId"></span>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(m => m.UserName)
            <input type="text" class="form-control" asp-for="UserName" placeholder="사용자명" />
            <span class="text-danger" asp-validation-for="UserName"></span>

        </div>
        <div class="form-group">
            @Html.DisplayNameFor(m => m.UserEmail)
            <input type="text" class="form-control" asp-for="UserEmail" placeholder="이메일" />
            <span class="text-danger" asp-validation-for="UserEmail"></span>

        </div>
        <div class="form-group">
            @Html.DisplayNameFor(m => m.Password)
            <input type="password" class="form-control" asp-for="Password" placeholder="비밀번호" />
            <span class="text-danger" asp-validation-for="Password"></span>

        </div>
        <button type="submit" name="btnRegister" class="btn btn-lg btn-success btn-block">등록</button>
        <p style="padding-top:10px;"><a asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="EUser" asp-action ="Login" class="btn btn-primary btn-block">로그인</a></p>
        </form>
    </div>
</div>

